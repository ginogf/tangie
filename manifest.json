{
    "manifest_version": 2,
    "name": "Tangie Text Summarizer",
    "description": "This extension allows you to summarize selected text using OpenAI",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "public/index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }  